%nav.top-bar{"data-options" => "is_hover:false"}
  %ul.title-area
    %li.name
      %h1
        %a{href: "#"}
          Dash Labs
  %section.top-bar-section
    %ul.right
      - if user_signed_in?
        %li.divider
          %li.has-dropdown
            = link_to current_user.name
            %ul.dropdown
              %li
                = link_to 'Dashboard', root_path
                = link_to 'Friends', users_path
                = link_to 'Your Trips', trips_index_path
                = link_to 'Logout', destroy_user_session_path(user_session), method: :delete
      - else 
        %li.divider
          %li 
            = link_to "Sign In", new_user_session_path
          %li.divider
          %li.has-form
            = link_to "Get Started", new_user_registration_path, class: 'button'
